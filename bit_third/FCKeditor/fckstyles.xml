<Styles>
	<Style name="Normal" element="p">
		<Attribute name="class" value="" />
	</Style>
	<Style name="Abstract" element="p">
		<Attribute name="class" value="pAbstract" />
	</Style>
	<Style name="Excerpt" element="p">
		<Attribute name="class" value="pExcerpt" />
	</Style>
	<Style name="Excerpt: Quran/Hadits" element="p">
		<Attribute name="class" value="pQuran" />
	</Style>
	<Style name="Caption" element="p">
		<Attribute name="class" value="pCaption" />
	</Style>
	<Style name="H3|Chapter" element="h3" />
	<Style name="H4|SubTitle " element="h4" />
	<Style name="H5|Sub-SubTitle 1" element="h5" />
	<Style name="H6|Sub-SubTitle 2" element="h6" />
	<Style name="Image on Left" element="img">
		<Attribute name="style" value="border: 1px solid #CCCCCC; padding: 5px; margin-right: 5px" />
		<Attribute name="align" value="left" />
	</Style>
	<Style name="Image on Right" element="img">
		<Attribute name="style" value="border: 1px solid #CCCCCC; padding: 5px; margin-left: 5px" />
		<Attribute name="align" value="right" />
	</Style>
	<Style name="Custom Bold" element="span">
		<Attribute name="style" value="font-weight: bold;" />
	</Style>
	<Style name="Custom Italic" element="em" />
	<Style name="Custom Ruler" element="hr">
		<Attribute name="size" value="1" />
		<Attribute name="color" value="#ff0000" />
	</Style>
	<Style name="Custom Code" element="span">
		<Attribute name="class" value="Code" />
	</Style>
</Styles>